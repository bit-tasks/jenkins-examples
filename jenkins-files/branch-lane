pipeline {
  agent {
    docker {
      image 'bitsrc/stable:latest'
      args '-u root --privileged'
    }
  }
  environment {
    GIT_USER_NAME = 'git_user_name'
    GIT_USER_EMAIL = 'git_user_email'
    BIT_CONFIG_USER_TOKEN = 'bit_user_token'
  }
  stages {
    stage('Build') {
      steps {
        script {
          sh '''
            # added from bit-init.sh
            cd "my-workspace-directory"
            bit install
      
            # added from branch-lane.sh
            bit status --strict
            bit lane create ${LANE_NAME}
            bit snap -m "CI" --build
            bit export
          '''
        }
      }
    }
  }
  post {
    always {
      script {
        cleanWs()
      }
    }
  }
}
